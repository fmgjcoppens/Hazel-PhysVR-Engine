## Platform detection
if(CMAKE_SYSTEM_NAME STREQUAL Linux)
    set(SRC_PLATFORM_OS ${SRC_PLATFORM_LINUX})
elseif(CMAKE_SYSTEM_NAME STREQUAL Darwin)
    set(SRC_PLATFORM_OS ${SRC_PLATFORM_MACOS})
